#ifndef BIT_MATH_H
#define BIT_MATH_h

#define		SET_BIT(REG,bitNo)	((REG) | (1<<bitNo))
#define		CLR_BIT(REG,bitNo)	(REG &(~(1<<(bitNo-1))))
#define		GET_BIT(REG,bitNo)	((REG>>bitNo)&1)	
#define		TGL_BIT(REG,bitNo)	(REG^(1<<(bitNo-1)))

#endif
